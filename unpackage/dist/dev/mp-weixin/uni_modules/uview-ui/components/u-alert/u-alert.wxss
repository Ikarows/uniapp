view, scroll-view, swiper-item {
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
  flex-grow: 0;
  flex-basis: auto;
  align-items: stretch;
  align-content: flex-start;
}
.u-alert {
  position: relative;
  background-color: #3c9cff;
  padding: 8px 10px;

  display: flex;

  flex-direction: row;
  align-items: center;
  border-top-left-radius: 4px;
  border-top-right-radius: 4px;
  border-bottom-left-radius: 4px;
  border-bottom-right-radius: 4px;
}
.u-alert--primary--dark {
  background-color: #3c9cff;
}
.u-alert--primary--light {
  background-color: #ecf5ff;
}
.u-alert--error--dark {
  background-color: #f56c6c;
}
.u-alert--error--light {
  background-color: #FEF0F0;
}
.u-alert--success--dark {
  background-color: #5ac725;
}
.u-alert--success--light {
  background-color: #f5fff0;
}
.u-alert--warning--dark {
  background-color: #f9ae3d;
}
.u-alert--warning--light {
  background-color: #FDF6EC;
}
.u-alert--info--dark {
  background-color: #909399;
}
.u-alert--info--light {
  background-color: #f4f4f5;
}
.u-alert__icon {
  margin-right: 5px;
}
.u-alert__content {

  display: flex;

  flex-direction: column;
  flex: 1;
}
.u-alert__content__title {
  color: #303133;
  font-size: 14px;
  font-weight: bold;
  color: #fff;
  margin-bottom: 2px;
}
.u-alert__content__desc {
  color: #303133;
  font-size: 14px;
  flex-wrap: wrap;
  color: #fff;
}
.u-alert__title--dark, .u-alert__desc--dark {
  color: #FFFFFF;
}
.u-alert__text--primary--light, .u-alert__text--primary--light {
  color: #3c9cff;
}
.u-alert__text--success--light, .u-alert__text--success--light {
  color: #5ac725;
}
.u-alert__text--warning--light, .u-alert__text--warning--light {
  color: #f9ae3d;
}
.u-alert__text--error--light, .u-alert__text--error--light {
  color: #f56c6c;
}
.u-alert__text--info--light, .u-alert__text--info--light {
  color: #909399;
}
.u-alert__close {
  position: absolute;
  top: 11px;
  right: 10px;
}

